{
  "manifest_version": 3,
  "name": "Splitwise MOD",
  "version": "1.0",
  "description": "Hack to add unlimited entries in Splitwise.",
  "permissions": ["scripting", "activeTab", "identity"],
  "host_permissions": ["https://secure.splitwise.com/*"],  
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Click to Inject Script"
  },
  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLIENT_ID",
    "scopes": ["email", "profile"]
  }
}
